<h1> Edit Beverage </h1>

<form method="POST" action="/custombeverages/<%=@beverage.slug%>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">

  <label>Beverage Name:</label><br>
  <input type="text" name="title" value="<%= @beverage.title %>"><br>
  <br>
  <label>Description:</label><br>
  <input type="text" name="content" value="<%= @beverage.content %>"><br>
  <br>
  <input type="submit" value="submit">

</form>
