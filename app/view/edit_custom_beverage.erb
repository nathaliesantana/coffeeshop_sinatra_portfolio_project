<h1> Edit Beverage </h1>

<form method="POST" action="/custombeverages/<%=@beverage.slug%>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">

  <input type="text" name="title" value="<%= @beverage.title %>">
  <input type="text" name="content" value="<%= @beverage.content %>">
  <input type="submit" value="submit">

</form>
